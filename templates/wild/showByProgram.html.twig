{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p><strong>Categorie : {{ program.category.name }}</strong></p>
            {% for actor in program.actors %}
                <a href="{{ path( 'wild_actor', { 'slug' : actor.slug }) }}">- {{ actor.name }} </a>
            {% endfor %}
            <ul>
                {% for season in seasons %}
                <li>
                    <h3><a href="/wild/show_by_season/{{ season.id }}">Saison {{ season.number }}</a></h3>
                    <p>{{ season.year }}</p>
                    <p>{{ season.description }}</p>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour Ã  l'accueil
    </a>

{% endblock %}