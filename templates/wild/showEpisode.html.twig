{% extends "base.html.twig" %}

{% block title %}{{ program.title }} Épisode {{ episode.number }} Saison {{ season.number }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1>{{ program.title }} Épisode {{ episode.number }} Saison {{ season.number }}</h1>
            <p><strong>Categorie : {{ program.category.name }}</strong></p>
            <p>{{ episode.synopsis }}</p>
        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}