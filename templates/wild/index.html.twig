{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.searchField) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
    <h1>Tout les programmes : </h1>
    {% for program in programs %}
        <div>
            <a href="/wild/show_by_program/{{ program.title|replace({' ': '-'})|lower }}"><strong>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</strong></a>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('default_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}